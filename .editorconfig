# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4

[*.gradle]
indent_style = space
indent_size = 2

[*.{kt,kts}]
indent_style = space
indent_size = 2
ktlint_standard_no-wildcard-imports = disabled

[{*.groovy,*.java}]
indent_style = space
indent_size = 2
